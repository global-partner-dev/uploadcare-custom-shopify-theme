{% doc %}
  @prompt
    The following content should be included:
    It should be centered.
    ----------------------------------------
    Ready To Print Your Pictures?
    Start uploading your pictures.
    --------------------------------------
    Below these texts should be a "Select Pictures" button with the "Photo upload" content.
    All elements should be centered on the page.
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{{ 'section-photo-upload.css' | asset_url | stylesheet_tag }}

{% style %}
  .ai-photo-upload-{{ ai_gen_id }} {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-align: center;
    padding: {{ block.settings.section_padding }}px;
    background-color: {{ block.settings.background_color }};
    min-height: {{ block.settings.min_height }}px;
  }

  .ai-photo-upload-content-{{ ai_gen_id }} {
    max-width: {{ block.settings.content_width }}px;
    width: 100%;
  }

  .ai-photo-upload-heading-{{ ai_gen_id }} {
    font-size: {{ block.settings.heading_size }}px;
    font-weight: 600;
    color: {{ block.settings.heading_color }};
    margin: 0 0 {{ block.settings.text_spacing }}px 0;
    line-height: 1.2;
  }

  .ai-photo-upload-subtext-{{ ai_gen_id }} {
    font-size: {{ block.settings.subtext_size }}px;
    color: {{ block.settings.subtext_color }};
    margin: 0 0 {{ block.settings.button_spacing }}px 0;
    line-height: 1.4;
  }

  .ai-photo-upload-button-{{ ai_gen_id }} {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 8px;
    padding: {{ block.settings.button_padding_vertical }}px {{ block.settings.button_padding_horizontal }}px;
    background-color: {{ block.settings.button_background }};
    color: {{ block.settings.button_text_color }};
    border: {{ block.settings.button_border_width }}px solid {{ block.settings.button_border_color }};
    border-radius: {{ block.settings.button_border_radius }}px;
    font-size: {{ block.settings.button_font_size }}px;
    font-weight: 500;
    text-decoration: none;
    cursor: pointer;
    transition: all 0.3s ease;
    min-width: 160px;
  }

  .ai-photo-upload-button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_background }};
    color: {{ block.settings.button_hover_text_color }};
    border-color: {{ block.settings.button_hover_border_color }};
    transform: translateY(-1px);
  }

  .ai-photo-upload-button-icon-{{ ai_gen_id }} {
    width: 20px;
    height: 20px;
    flex-shrink: 0;
  }

  @media screen and (max-width: 749px) {
    .ai-photo-upload-{{ ai_gen_id }} {
      padding: {{ block.settings.section_padding | times: 0.7 }}px {{ block.settings.section_padding | times: 0.5 }}px;
    }

    .ai-photo-upload-heading-{{ ai_gen_id }} {
      font-size: {{ block.settings.heading_size | times: 0.85 }}px;
    }

    .ai-photo-upload-subtext-{{ ai_gen_id }} {
      font-size: {{ block.settings.subtext_size | times: 0.9 }}px;
    }

    .ai-photo-upload-button-{{ ai_gen_id }} {
      padding: {{ block.settings.button_padding_vertical | times: 0.9 }}px {{ block.settings.button_padding_horizontal | times: 0.8 }}px;
      font-size: {{ block.settings.button_font_size | times: 0.9 }}px;
    }
  }
{% endstyle %}

<photo-upload-{{ ai_gen_id }}
  class="ai-photo-upload-{{ ai_gen_id }}"
  {{ block.shopify_attributes }}
>
  <div class="ai-photo-upload-content-{{ ai_gen_id }}">
    {% if block.settings.heading != blank %}
      <h2 class="ai-photo-upload-heading-{{ ai_gen_id }}">
        {{ block.settings.heading }}
      </h2>
    {% endif %}

    {% if block.settings.subtext != blank %}
      <p class="ai-photo-upload-subtext-{{ ai_gen_id }}">
        {{ block.settings.subtext }}
      </p>
    {% endif %}

    <div class="select-pictures-container">
      <button class="select-pictures-btn" id="select-pictures-btn" type="button" aria-label="Select pictures to upload">
        {{ block.settings.button_text }}
      </button>
    </div>
  </div>
</photo-upload-{{ ai_gen_id }}>

<script>
  (function() {
    document.addEventListener('DOMContentLoaded', function() {
      var root = document.querySelector('photo-upload-{{ ai_gen_id }}');
      if (!root) return;
      var btn = root.querySelector('#select-pictures-btn');
      if (!btn) return;
      if (btn._aiWired) return; // avoid duplicate listeners
      btn._aiWired = true;
      btn.addEventListener('click', function() {
        if (window.photoUploadManager && typeof window.photoUploadManager.openModal === 'function') {
          window.photoUploadManager.openModal();
          return;
        }
        var modal = document.getElementById('photo-selection-modal');
        if (modal) {
          modal.style.display = 'flex';
          document.body.style.overflow = 'hidden';
        }
      });
    });
  })();
  </script>


