  .ai-picture-upload__heading-{{ ai_gen_id }} {
    font-size: {{ block.settings.heading_size }}px;
    color: {{ block.settings.text_color }};
    margin: 0 0 {{ block.settings.text_spacing }}px;
    font-weight: 600;
  }

  .ai-picture-upload__subheading-{{ ai_gen_id }} {
    font-size: {{ block.settings.subheading_size }}px;
    color: {{ block.settings.text_color }};
    margin: 0 0 {{ block.settings.text_spacing }}px;
    opacity: 0.8;
  }

  .ai-picture-upload__description-{{ ai_gen_id }} {
    font-size: {{ block.settings.description_size }}px;
    color: {{ block.settings.text_color }};
    margin: 0 0 {{ block.settings.upload_spacing }}px;
    opacity: 0.7;
  }

  .ai-picture-upload__dropzone-{{ ai_gen_id }} {
    border: 2px dashed {{ block.settings.border_color }};
    border-radius: {{ block.settings.border_radius }}px;
    padding: {{ block.settings.dropzone_padding }}px;
    background-color: {{ block.settings.dropzone_background }};
    transition: all 0.3s ease;
    cursor: pointer;
    position: relative;
    min-height: {{ block.settings.dropzone_height }}px;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    gap: 20px;
  }

  .ai-picture-upload__dropzone-{{ ai_gen_id }}:hover {
    border-color: {{ block.settings.border_hover_color }};
    background-color: {{ block.settings.dropzone_hover_background }};
  }

  .ai-picture-upload__dropzone-{{ ai_gen_id }}.dragover {
    border-color: {{ block.settings.border_active_color }};
    background-color: {{ block.settings.dropzone_active_background }};
    transform: scale(1.02);
  }

  .ai-picture-upload__icon-{{ ai_gen_id }} {
    width: {{ block.settings.icon_size }}px;
    height: {{ block.settings.icon_size }}px;
    color: {{ block.settings.icon_color }};
    margin-bottom: 10px;
  }

  .ai-picture-upload__dropzone-text-{{ ai_gen_id }} {
    font-size: {{ block.settings.dropzone_text_size }}px;
    color: {{ block.settings.text_color }};
    font-weight: 500;
    margin: 0;
  }

  .ai-picture-upload__dropzone-subtext-{{ ai_gen_id }} {
    font-size: {{ block.settings.dropzone_subtext_size }}px;
    color: {{ block.settings.text_color }};
    opacity: 0.6;
    margin: 0;
  }

  .ai-picture-upload__input-{{ ai_gen_id }} {
    position: absolute;
    opacity: 0;
    width: 100%;
    height: 100%;
    cursor: pointer;
  }

  .ai-picture-upload__button-{{ ai_gen_id }} {
    background-color: {{ block.settings.button_background }};
    color: {{ block.settings.button_text_color }};
    border: none;
    padding: 12px 24px;
    border-radius: {{ block.settings.button_border_radius }}px;
    font-size: {{ block.settings.button_text_size }}px;
    font-weight: 500;
    cursor: pointer;
    transition: background-color 0.3s ease;
  }

  .ai-picture-upload__button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_background }};
  }

  .ai-picture-upload__preview-{{ ai_gen_id }} {
    margin-top: {{ block.settings.preview_spacing }}px;
    display: none;
  }

  .ai-picture-upload__preview-{{ ai_gen_id }}.active {
    display: block;
  }

  .ai-picture-upload__preview-grid-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(150px, 1fr));
    gap: 15px;
    margin-bottom: 20px;
  }

