>
  <div class="ai-picture-upload__container-{{ ai_gen_id }}">
    {% if block.settings.heading != blank %}
      <h2 class="ai-picture-upload__heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
    {% endif %}

    {% if block.settings.subheading != blank %}
      <p class="ai-picture-upload__subheading-{{ ai_gen_id }}">{{ block.settings.subheading }}</p>
    {% endif %}

    {% if block.settings.description != blank %}
      <p class="ai-picture-upload__description-{{ ai_gen_id }}">{{ block.settings.description }}</p>
    {% endif %}

    <div class="ai-picture-upload__dropzone-{{ ai_gen_id }}" data-dropzone>
      <svg class="ai-picture-upload__icon-{{ ai_gen_id }}" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 16a4 4 0 01-.88-7.903A5 5 0 1115.9 6L16 6a5 5 0 011 9.9M15 13l-3-3m0 0l-3 3m3-3v12" />
      </svg>
      
      <p class="ai-picture-upload__dropzone-text-{{ ai_gen_id }}">{{ block.settings.dropzone_text }}</p>
      <p class="ai-picture-upload__dropzone-subtext-{{ ai_gen_id }}">{{ block.settings.dropzone_subtext }}</p>
      
      <button type="button" class="ai-picture-upload__button-{{ ai_gen_id }}">
        {{ block.settings.button_text }}
      </button>
      
      <input
        type="file"
        class="ai-picture-upload__input-{{ ai_gen_id }}"
        multiple
        accept="image/*"
        data-file-input
      >
    </div>

    <div class="ai-picture-upload__status-{{ ai_gen_id }}" data-status></div>

    <div class="ai-picture-upload__preview-{{ ai_gen_id }}" data-preview>
      <div class="ai-picture-upload__file-count-{{ ai_gen_id }}" data-file-count></div>
      <div class="ai-picture-upload__preview-grid-{{ ai_gen_id }}" data-preview-grid></div>
      
      {% if block.settings.continue_button_text != blank and block.settings.continue_button_link != blank %}
        <a href="{{ block.settings.continue_button_link }}" class="ai-picture-upload__continue-button-{{ ai_gen_id }}">
          {{ block.settings.continue_button_text }}
        </a>
      {% endif %}
    </div>
  </div>
</picture-upload-{{ ai_gen_id }}>

<script>
  (function() {
    class PictureUpload{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.files = [];
        this.maxFiles = {{ block.settings.max_files }};
        this.maxFileSize = {{ block.settings.max_file_size }} * 1024 * 1024;
      }

      connectedCallback() {
        this.dropzone = this.querySelector('[data-dropzone]');
        this.fileInput = this.querySelector('[data-file-input]');
        this.preview = this.querySelector('[data-preview]');
        this.previewGrid = this.querySelector('[data-preview-grid]');
        this.fileCount = this.querySelector('[data-file-count]');
        this.status = this.querySelector('[data-status]');
        this.button = this.querySelector('.ai-picture-upload__button-{{ ai_gen_id }}');

        this.setupEventListeners();
      }

      setupEventListeners() {
        this.dropzone.addEventListener('click', () => this.fileInput.click());
        this.button.addEventListener('click', (e) => {
          e.stopPropagation();
          this.fileInput.click();
        });

        this.fileInput.addEventListener('change', (e) => this.handleFiles(e.target.files));

        this.dropzone.addEventListener('dragover', (e) => {
          e.preventDefault();
          this.dropzone.classList.add('dragover');
        });

        this.dropzone.addEventListener('dragleave', () => {
          this.dropzone.classList.remove('dragover');
        });

        this.dropzone.addEventListener('drop', (e) => {
          e.preventDefault();
          this.dropzone.classList.remove('dragover');
          this.handleFiles(e.dataTransfer.files);
        });
      }

      handleFiles(fileList) {
        const newFiles = Array.from(fileList).filter(file => {
          if (!file.type.startsWith('image/')) {
            this.showStatus('Only image files are allowed.', 'error');
            return false;
          }
          if (file.size > this.maxFileSize) {
            this.showStatus(`File "${file.name}" is too large. Maximum size is {{ block.settings.max_file_size }}MB.`, 'error');
            return false;
          }
          return true;
        });

        if (this.files.length + newFiles.length > this.maxFiles) {
          this.showStatus(`You can only upload up to ${this.maxFiles} files.`, 'error');
          return;
        }

        newFiles.forEach(file => {
          this.files.push(file);
          this.createPreview(file);
        });

        this.updateFileCount();
        this.showPreview();
        this.showStatus(`${newFiles.length} file(s) added successfully!`, 'success');
      }

      createPreview(file) {
        const reader = new FileReader();
        reader.onload = (e) => {
          const previewItem = document.createElement('div');
          previewItem.className = 'ai-picture-upload__preview-item-{{ ai_gen_id }}';
          
          previewItem.innerHTML = `
            <img src="${e.target.result}" alt="Preview" class="ai-picture-upload__preview-image-{{ ai_gen_id }}">
            <button type="button" class="ai-picture-upload__remove-button-{{ ai_gen_id }}" data-remove>×</button>
          `;

          const removeButton = previewItem.querySelector('[data-remove]');
          removeButton.addEventListener('click', () => this.removeFile(file, previewItem));

          this.previewGrid.appendChild(previewItem);
        };
        reader.readAsDataURL(file);
      }

      removeFile(file, previewItem) {
        const index = this.files.indexOf(file);
        if (index > -1) {
          this.files.splice(index, 1);
          previewItem.remove();
          this.updateFileCount();
          
          if (this.files.length === 0) {
            this.hidePreview();
          }
        }
      }

      updateFileCount() {
        const count = this.files.length;
        const maxFiles = this.maxFiles;
        this.fileCount.textContent = `${count} of ${maxFiles} files selected`;
      }

      showPreview() {
        this.preview.classList.add('active');
      }

      hidePreview() {
        this.preview.classList.remove('active');
      }

      showStatus(message, type) {
        this.status.textContent = message;
        this.status.className = `ai-picture-upload__status-{{ ai_gen_id }} ${type}`;
        
        setTimeout(() => {
          this.status.style.display = 'none';
        }, 5000);
      }
    }

    customElements.define('picture-upload-{{ ai_gen_id }}', PictureUpload{{ ai_gen_id }});
  })();
</script>

